{
	// Editor (font) settings
	"editor.fontSize": 16,
	"editor.lineHeight": 30,
	// Editor settings
	"editor.rulers": [
		80,
		120
	],
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": true
	},
	"editor.showUnused": false,
	"editor.colorDecorators": false,
	"editor.formatOnSave": false,
	"editor.formatOnType": false,
	"editor.snippetSuggestions": "inline",
	"editor.suggestSelection": "first",
	"editor.cursorBlinking": "phase",
	"editor.cursorStyle": "underline",
	"editor.renderWhitespace": "all",
	"editor.renderControlCharacters": true,
	"editor.renderLineHighlight": "all",
	"editor.stablePeek": false,
	"editor.minimap.enabled": false,
	"editor.dragAndDrop": false,
	"editor.codeLens": false,
	"editor.largeFileOptimizations": false,
	"editor.tabSize": 1,
	"editor.guides.bracketPairs": true,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.experimental.asyncTokenization": true,
	// diffEdirtor settings
	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.hideUnchangedRegions.enabled": true,
	// Workbench settings
	"workbench.editor.swipeToNavigate": true,
	"workbench.editor.labelFormat": "short",
	"workbench.startupEditor": "welcomePage",
	"workbench.iconTheme": "vs-nomo-dark",
	// Window settings
	"window.title": "${activeEditorMedium}${separator}${rootName}",
	// Files settings
	"files.eol": "\n",
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/node_modules": false
	},
	"files.associations": {
		"*.log": "log",
		"**/.vsts/**/*.yml": "azure-pipelines"
	},
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.hotExit": "off",
	// File Explorer settings
	"explorer.autoReveal": false,
	"explorer.decorations.colors": false,
	"explorer.fileNesting.enabled": true,
	// Search settings
	"search.useIgnoreFiles": true,
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/out": true
	},
	// Extensions settings
	"extensions.autoUpdate": false,
	// CSS settings
	"css.lint.duplicateProperties": "warning",
	"css.lint.zeroUnits": "error",
	"css.lint.idSelector": "error",
	// SCSS settings
	"scss.lint.duplicateProperties": "warning",
	"scss.lint.zeroUnits": "error",
	"scss.lint.idSelector": "error",
	// Less settings
	"less.lint.duplicateProperties": "warning",
	"less.lint.zeroUnits": "error",
	"less.lint.idSelector": "error",
	// HTML setting
	"html.format.wrapLineLength": 0,
	"html.format.indentInnerHtml": true,
	"html.format.maxPreserveNewLines": 1,
	"html.format.endWithNewline": true,
	// PHP settings
	"php.suggest.basic": false,
	"php.validate.enable": false,
	// TypeScript settings
	"typescript.disableAutomaticTypeAcquisition": true,
	"typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"typescript.suggest.completeJSDocs": false,
	"typescript.suggest.jsdoc.generateReturns": false,
	// JavaScript settings
	"javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"javascript.suggest.completeJSDocs": false,
	"javascript.suggest.jsdoc.generateReturns": false,
	// Terminal settings
	"terminal.external.osxExec": "iTerm.app",
	// Intergated Terminal settings
	"terminal.integrated.lineHeight": 1.8,
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "underline",
	"terminal.integrated.scrollback": 10000,
	// Default Configuration Overrides settings
	"[markdown]": {
		"editor.wordWrapColumn": 120,
		"editor.wordWrap": "wordWrapColumn"
	},
	"[python]": {
		"editor.detectIndentation": false
	},
	"[go]": {
		"editor.formatOnSave": false
	},
	"[sql]": {
		"editor.defaultFormatter": "adpyke.vscode-sql-formatter"
	},
	// Git
	"git.enabled": true,
	"git.enableSmartCommit": true,
	// Gulp settings
	"gulp.autoDetect": "off",
	// python extension
	"python.linting.pylintEnabled": false,
	"python.linting.flake8Enabled": true,
	"python.analysis.memory.keepLibraryAst": true,
	"python.analysis.memory.keepLibraryLocalVariables": true,
	"python.analysis.logLevel": "Information",
	"python.analysis.autoSearchPaths": true,
	"python.analysis.useLibraryCodeForTypes": true,
	"python.languageServer": "Pylance",
	"python.analysis.extraPaths": [
		"/Users/mrmlnc/Documents/arcadia/portal"
	],
	"python.autoComplete.extraPaths": [
		"/Users/mrmlnc/Documents/arcadia/portal"
	],
	// go extension
	"go.formatTool": "gofmt",
	"go.buildOnSave": "off",
	"go.useLanguageServer": true,
	"go.lintOnSave": "file",
	// powershell extension
	"powershell.integratedConsole.showOnStartup": false,
	"powershell.codeFormatting.autoCorrectAliases": true,
	"powershell.codeFormatting.useCorrectCasing": true,
	"powershell.integratedConsole.suppressStartupBanner": true,
	// ESLint extension
	"eslint.run": "onSave",
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript"
	],
	// Postfix TS/JS
	"postfix.customTemplates": [
		// Console
		{
			"name": "dir",
			"description": "console.dir(expr, { colors: true, compact: false, depth: 2 });",
			"body": "console.dir({{expr}}, { colors: true, compact: false, depth: 2 });",
			"when": [
				"expression",
				"identifier",
				"function-call"
			]
		}
	],
	// cSpell extension
	"cSpell.minWordLength": 3,
	"cSpell.spellCheckDelayMs": 500,
	"cSpell.language": "en,ru",
	"cSpell.userWords": [
		"execa",
		"groupable",
		"ipc",
		"nodelib",
		"quantile",
		"stdev",
		"tsc",
		"проактивной",
		"пулл-реквесте",
		"стендапах",
		"стендапов",
		"стендапом",
		"Стендапы",
		"тестинге",
		"фичи",
		"фронтенда",
		"пререквизит"
	],
	// Docker extension
	"docker.extension.enableComposeLanguageServer": false
}
