{
	// Editor (font) settings
	"editor.fontFamily": "Consolas",
	"editor.fontSize": 14,
	"editor.lineHeight": 32,
	// Editor settings
	"editor.rulers": [
		80,
		120
	],
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": true
	},
	"editor.showUnused": false,
	"editor.colorDecorators": false,
	"editor.formatOnType": true,
	"editor.snippetSuggestions": "inline",
	"editor.cursorBlinking": "phase",
	"editor.cursorStyle": "underline",
	"editor.renderWhitespace": "all",
	"editor.renderControlCharacters": true,
	"editor.renderLineHighlight": "all",
	"editor.stablePeek": false,
	"editor.minimap.enabled": false,
	"editor.dragAndDrop": false,
	"editor.codeLens": false,
	// Workbench settings
	"workbench.editor.swipeToNavigate": true,
	"workbench.editor.labelFormat": "short",
	"workbench.iconTheme": "vs-nomo-dark",
	"workbench.colorCustomizations": {
		"statusBar.background": "#466991"
	},
	// Window settings
	"window.title": "${activeEditorMedium}${separator}${rootName}",
	// Files settings
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/node_modules": true
	},
	"files.associations": {
		"*.log": "log",
		"**/.vsts/**/*.yml": "azure-pipelines"
	},
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.hotExit": "off",
	"files.useExperimentalFileWatcher": true,
	// File Explorer settings
	"explorer.autoReveal": false,
	"explorer.decorations.colors": false,
	// Search settings
	"search.useIgnoreFiles": true,
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/out": true
	},
	// Extensions settings
	"extensions.autoUpdate": false,
	// CSS settings
	"css.lint.duplicateProperties": "warning",
	"css.lint.zeroUnits": "error",
	"css.lint.idSelector": "error",
	// SCSS settings
	"scss.lint.duplicateProperties": "warning",
	"scss.lint.zeroUnits": "error",
	"scss.lint.idSelector": "error",
	// Less settings
	"less.lint.duplicateProperties": "warning",
	"less.lint.zeroUnits": "error",
	"less.lint.idSelector": "error",
	// HTML setting
	"html.format.wrapLineLength": 0,
	"html.format.indentInnerHtml": true,
	"html.format.maxPreserveNewLines": 1,
	"html.format.endWithNewline": true,
	// PHP settings
	"php.suggest.basic": false,
	"php.validate.enable": false,
	// TypeScript settings
	"typescript.disableAutomaticTypeAcquisition": true,
	"typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
	// JavaScript settings
	"javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
	// Terminal settings
	"terminal.external.osxExec": "iTerm.app",
	// Intergated Terminal settings
	"terminal.integrated.lineHeight": 1.8,
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "underline",
	"terminal.integrated.scrollback": 10000,
	// Default Configuration Overrides settings
	"[markdown]": {
		"editor.wordWrapColumn": 120,
		"editor.wordWrap": "wordWrapColumn"
	},
	"[python]": {
		"editor.detectIndentation": false
	},
	// Git
	"git.enabled": true,
	// Gulp settings
	"gulp.autoDetect": "off",
	// Python extension
	"python.autoComplete.extraPaths": [
		"/Users/mrmlnc/Documents/Sandbox/sandbox"
	],
	"python.linting.pylintEnabled": false,
	"python.linting.flake8Enabled": true,
	// ESLint extension
	"eslint.run": "onSave",
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript"
	],
	// TSLint extension
	"tslint.run": "onSave",
	// Postfix TS/JS
	"postfix.customTemplates": [
		// Console
		{
			"name": "dir",
			"description": "console.dir(expr, { colors: true });",
			"body": "console.dir({{expr}}, { colors: true });",
			"when": [
				"expression",
				"identifier",
				"function-call"
			]
		}
	],
	"workbench.startupEditor": "welcomePage",
	"cSpell.minWordLength": 2,
	"cSpell.spellCheckDelayMs": 500,
	"cSpell.language": "en,ru",
	"cSpell.userWords": [
		"nodelib",
		"groupable",
		"execa",
		"ipc",
		"tsc",
		"quantile",
		"stdev"
	],
	"window.zoomLevel": 0,
	"diffEditor.renderSideBySide": true,
	"editor.lightbulb.enabled": false,
	"python.jediEnabled": false,
	"powershell.powerShellExePath": "C:\\Program Files\\PowerShell\\6\\pwsh.exe"
}
